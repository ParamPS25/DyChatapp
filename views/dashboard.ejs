
    <%- include('layouts/header.ejs') %>
    <div>
        <h4 class="mb-4">Hi,<%=currentUser.username%></h4>
    </div>
    <div class="row">

            <div class="col-md-3">                 <!--occupy 25% for users-->
                <ul class="list-group">
                    <% if (locals.users) { %>
                     <% users.forEach(user => { %>
                        <li class="list-group-item list-group-item-dark cursor-pointer user-list">
                            <img src="images/profileDefault.jpeg"height="50px" height="50px">
                            <%= user.username %>
                        </li>
                     <% }) %>
                    <% } %>
                </ul>
            </div>
            <!--if not started chat pointer user->clicked then show() chat section ,by default display none()-->
            <div class="col-md-9">  <!--occupy 75% for chat-->
                <h3 class="start-chat">click to start chat</h3>
                <div class="chat-section">
                    <div class="chat-container">
                    </div>

                    <form>
                        <input type="text" name="message" placeholder="enter message" id="message" required>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                </div>
                
            </div>
    </div>

    <script>
        $(document).ready(function(){

            $('.user-list').click(function(){
                $('.start-chat').hide();
                $('.chat-section').show();
            });
        })
    </script>

    <%- include('layouts/footer.ejs') %>

